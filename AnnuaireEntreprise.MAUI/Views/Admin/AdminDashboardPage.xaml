<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnnuaireEntreprise.MAUI.Views.Admin.AdminDashboardPage"
             Title="Administration">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Interface Administrateur" FontSize="20" HorizontalOptions="Center" />
            <Button Text="Gérer les Sites" Clicked="OnManageSitesClicked" />
            <Button Text="Gérer les Services" Clicked="OnManageServicesClicked" />
            <Button Text="Gérer les Salariés" Clicked="OnManageEmployeesClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
